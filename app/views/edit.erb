<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name: <input type="text" name= "name" id= "name" value="<%= @post.name %>"></label>
  <label>Content: <textarea name= "content" id="content"> <%= @post.content %> </textarea></label>
  <input type="submit" id="submit">
</form>
