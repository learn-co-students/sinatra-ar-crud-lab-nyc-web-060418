<form method="POST" action="/posts/<%=params[:id]%>">
<input id="hidden" type="hidden" name="_method" value="patch">
<p>Your Name: <input type="text" name="name"><%=@post.name%></p>
<p>Content: <textarea name="content" rows="10" cols="30"><%=@post.content%></textarea><p>
<input type="submit" value="submit">
</form>
